<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.professionals.empty? %>
          <li class="nav-item">
            <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Profile", p_dashboard_path(current_user), class: "nav-link" %>
          </li>
        <% end %>
      <% end %>

      <div>
        <% if user_signed_in? %>
          <% if current_user.professionals.empty? %>
            <li class="nav-item">
              <%= link_to "Find Professionals", professionals_path, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Messages", "#", class: "nav-link" %>
            </li>
          <% end %>
        </div>
        <!-- ========= -->
        <!-- changed -->
        <li class="nav-item dropdown">
          <% if current_user.profile_picture_url != nil %>
            <%= image_tag current_user.profile_picture_url, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <!-- ======== -->
            <%= link_to "For teachers", teacher_info_path , class: "dropdown-item"%>
            <%= link_to "For professionals", professional_info_path , class: "dropdown-item"%>

            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
