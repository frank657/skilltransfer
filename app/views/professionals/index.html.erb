                        <%#= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
                        <%#= f.input :text %>
                        <%#= f.submit :Request, class: "btn btn-primary" %>
                      <%# end %> -->

                      <%#= render 'lectures/form', lecture: @lecture %>

                    </div>
                  </div>
                </div>
              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
