<div class="banner-profile">
  <div class="container d-flex align-items-center">
    <img src=<%= current_user.profile_picture_url %> alt="Avatar" class="avatar-large mr-5">
    <div class="text-white">
      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <h3><%= @professional.title %></h3>
      <p><%= @user.email %></p>
      <h4><%= @professional.company %></h4>
    </div>
  </div>
</div>
<div class="container">
  <!-- TAB BARS -->
  <ul class="nav nav-tabs mb-3">
    <li class="li-tags" class="active"><a data-toggle="tab" href="#profile">Profile</a></li>
    <li class="li-tags"><a data-toggle="tab" href="#requests">Requests</a></li>
    <li class="li-tags"><a data-toggle="tab" href="#lectures">Upcoming lectures</a></li>
  </ul>
  <div class="tab-content">
    <!-- TAB 1 CLASSROOMS -->
    <div id="profile" class="tab-pane fade in active">
      <!-- <h5>You donâ€™t have any class rooms yet. Create your first one.</h5> -->
      <div class="container">
        <!-- PROFILE SECTION -->
        <p><%= @user.first_name %> <%= @user.last_name %></p>
        <p><%= @professional.company %></p>
        <p><%= @professional.title %></p>
      </div>
    </div>
    <!-- TAB 2 REQUESTS -->
    <div id="requests" class="tab-pane fade">
      <h3>Your upcoming lectures</h3>
      <p>You don't have any upcoming lectures yet.</p>
      <div class="container">
        <!-- REQUESTS CARD -->
        <% @user.class_rooms.each do |cr| %>
          <% cr.lectures.each do |l| %>
            <div class="card-classroom">
              <!-- <img src=<%= cr.picture_url %> class="avatar-large"/> -->
              <div class="card-classroom-content">
                <h3>Lecture</h3>
                <h4><%= l.name %></h4>
                <h4><%= l.professional.company %></h4>
                <h4><%= l.professional.user.first_name %> <%= l.professional.user.last_name %></h4>
                <h4><%= l.professional.title %></h4>
              </div>
              <div class="card-classroom-content">
                <h4>Time</h4>
                <p><%= l.start_time.strftime('%b %e, %l:%M %p') %></p>
              </div>
              <a><%= link_to 'View lecture', lecture_path(l), :class=>"btn btn-primary ml-2" %></a>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- TAB 3 LECTURES -->
    <div id="lectures" class="tab-pane fade">
      <h3>Your upcoming lectures</h3>
      <p>You don't have any upcoming lectures yet.</p>
    </div>
  </div>
</div>